{

    "name": "gsouf/uform",
    "description": "Form library, flexible and concret including filtering/validation/render with Bootstrap and Foundation adapters ",
    "type": "library",
    "keywords": ["form", "validation", "filter", "bootstrap", "foundation"],
    "homepage": "https://github.com/gsouf/UForm",
    "license": "MIT",

    "authors": [
        {
            "name": "Soufiane GHZAL",
            "homepage": "https://github.com/gsouf"
        }
    ],

    "autoload":{
        "psr-4" : {
            "UForm\\"   :   "src/UForm/"
        }
    },

    "autoload-dev":{
        "psr-4" : {
            "UForm\\Doc\\"   :   "test/doc/",
            "UForm\\Test\\"   :   "test/suites/UForm/Test"
        }
    },

    "require": {
        "php": ">=5.4.0",
        "twig/twig": "~1,>=1.12"
    },

    "require-dev":{
        "phpunit/phpunit": "~4.8.21",
        "codeclimate/php-test-reporter": "dev-master",
        "minime/annotations": "~2.0",
        "squizlabs/php_codesniffer": "~2"
    }
}
