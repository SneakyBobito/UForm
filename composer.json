{
    
    "name": "gsouf/uform",
    "description": "Form library that fits all your needing, even with bootstrap or foundation!",
    "type": "library",
    "keywords": ["form", "validation", "filter", "bootstrap", "foundation"],
    "homepage": "https://github.com/gsouf/UForm",
    "license": "MIT",

    "authors": [
        {
            "name": "Soufiane GHZAL",
            "homepage": "https://github.com/gsouf"
        }
    ],

    "autoload":{
        "psr-4" : {
            "UForm\\"   :   "lib/UForm/"
        }
    },

    "autoload-dev":{
        "psr-4" : {
            "UForm\\Doc\\"   :   "doc/"
        }
    },

    "require": {
        "php": ">=5.4.0",
        "twig/twig": "~1,>=1.12"
    },

    "require-dev":{
        "phpunit/phpunit": "4.1.2",
        "codeclimate/php-test-reporter": "dev-master",
        "minime/annotations": "~2.0",
        "particle/validator": ">=1.0.0",
        "squizlabs/php_codesniffer": "~2"
    },

    "suggest" : {
        "particle/validator" : "Augments builtin filtering when used with the ParticleRuleBridge validator",
        "particle/filter"    : "Augments builtin filtering when used with the ParticleFilterBridge filter"
    }
}